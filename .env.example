# Environment Configuration for FTG Sportfabrik Digital Bonus Cards

# Database (Supabase Session pooler - REQUIRED)
DATABASE_URL="postgresql://postgres.<PROJECT_REF>:<PASSWORD>@aws-1-eu-central-1.pooler.supabase.com:6543/postgres"

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,https://demo.ftg.de

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM="Sportfabrik FTG" <noreply@sportfabrik-ftg.de>

# Email Worker Configuration
EMAIL_DRY_RUN=true
EMAIL_SEND_CONCURRENCY=2
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_BACKOFF_MS=60000
EMAIL_BATCH_SIZE=10
EMAIL_POLL_INTERVAL_MS=30000

# App Configuration
APP_ENV=development
NODE_ENV=development
PORT=3000

# Desktop App API Configuration
DESKTOP_API_BASE_URL=http://localhost:3000

# Development Mode
ELECTRON_IS_DEV=true

# Debug Logging (optional)
# DEBUG=nodemailer:*