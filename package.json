{
  "name": "bonus-cards",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:desktop": "playwright test",
    "db:test": "ts-node src/test_db.ts",
    "dev:renderer": "webpack serve --config webpack.config.js",
    "build:renderer": "webpack --config webpack.config.js --mode production",
    "dev:desktop": "concurrently \"npm run dev\" \"npm run dev:renderer\" \"wait-on http://localhost:3000 http://localhost:3001 && npm run desktop\"",
    "build:desktop": "npm run build:renderer && tsc -p electron/tsconfig.json && electron-builder",
    "desktop": "electron dist/electron/main.js"
  },
  "dependencies": {
    "@types/webpack-dev-server": "^4.7.1",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.4.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.6.4",
    "pg": "^8.12.0",
    "pg-connection-string": "^2.9.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "uuid": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "playwright": "^1.55.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
